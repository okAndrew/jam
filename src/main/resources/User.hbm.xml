<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping>

	<class
		name="com.savruksergiy.jam.model.User"
		table="users">
		
		<id name="id">
			<generator class="native" />
		</id>
		
		<property name="login"
			column="login" />
			
		<property name="email"
			column="email" />
			
		<property name="password"
			column="password" />
			
		<property name="karma"
			column="karma" />
			
		<property name="sex"
			column="sex" />
			
		<property name="language"
			column="language" />
			
		<property name="photo"
			column="photo" />
			
		<property name="isDelete"
			column="is_deleted" />
			
		<property name="isBanned"
			column="is_banned" />
		
	</class>
	
</hibernate-mapping>